<div class="d-flex justify-content-center align-items-between gap-5 py-4">
    <h5 class="fw-bold fs-3 text-uppercase border-bottom border-top mt-1 border-dark">
        Productos
    </h5>
    <a href="/carts/{{cartId}}"
        class="text-decoration-none fs-5 btn btn-outline-dark border-warning bg-dark text-warning">
        <svg xmlns="http://www.w3.org/2000/svg" width="22px" height="22px" fill="currentColor" class="bi bi-cart4"
            viewBox="0 0 16 16">
            <path
                d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
        </svg>
        Carrito de compras
    </a>
</div>
    {{> filterMenu}}
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3" style="width: 1250px;">
    {{#each productos}}
    <div class="col mb-4">
        <div class="card h-100 bg-light">
            <div class="card-header bg-dark text-white">
                Codigo del producto: {{code}}
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="d-flex align-items-center justify-content-center">
                        <img src="{{thumbnail}}" alt="{{title}}" class="img-fluid mt-2" width="250" height="250">
                    </li>
                    <li>
                        <h5 class="card-title text-dark text-center fw-bold text-uppercase">
                            {{title}}
                        </h5>
                    </li>
                    <li class="mt-4">
                        <p class="text-center"><span class="text-dark text-center fw-bold">Unidades
                                disponibles:</span> {{stock}}
                        </p>
                    </li>
                    <li class="mt-3">
                        <p class="text-center">
                            <span class="text-dark text-center fw-bold">
                                Precio:
                            </span>
                            ${{price}}
                        </p>
                    </li>
                    <li class="mt-3">
                        <p class="text-center">
                            <span class="text-dark text-center fw-bold">
                                Categoria:
                            </span>
                            {{category}}
                        </p>
                    </li>
                </ul>
                <div class="text-center d-flex align-items-center justify-content-around mt-5">
                    <form action="/api/carts/{{../cartId}}/product/{{id}}" method="POST">
                        <button class="btn btn-dark fw-bold text-warning border-warning" type="submit">
                            Agregar al Carrito
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<div class="container mt-3 mb-5">
    <div class="row text-center">
        <p class="text-dark fw-bold">
            <a class="text-decoration-none text-dark me-2" href="/products?page={{prevPage}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-caret-left" viewBox="0 0 16 16">
                    <path
                        d="M10 12.796V3.204L4.519 8zm-.659.753-5.48-4.796a1 1 0 0 1 0-1.506l5.48-4.796A1 1 0 0 1 11 3.204v9.592a1 1 0 0 1-1.659.753" />
                </svg>
            </a>
            {{currentPage}} / {{totalPages}}
            <a class="text-decoration-none text-dark ms-2" href="/products?page={{nextPage}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-caret-right" viewBox="0 0 16 16">
                    <path
                        d="M6 12.796V3.204L11.481 8zm.659.753 5.48-4.796a1 1 0 0 0 0-1.506L6.66 2.451C6.011 1.885 5 2.345 5 3.204v9.592a1 1 0 0 0 1.659.753" />
                </svg>
            </a>
        </p>
    </div>
</div>